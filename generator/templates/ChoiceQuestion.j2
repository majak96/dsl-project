<div class="card card-question mt-4">
    <div class="card-body">
        <h5 class="card-title mb-3">{{question.title}}</h5>
        <fieldset class="form-group">
            <div class="row">
                <div class="col-sm-10">
                    {% for choice in question.parameters['choices'] %}
                    <div class="custom-control {% if question.parameters['multiple'] == True %}custom-checkbox{% else %}custom-radio{% endif %}">
                        <input class="custom-control-input" {% if question.parameters['multiple'] == True%} type="checkbox" id="checkbox{{question.name}}{{loop.index}}"{% else %}type="radio" name="radios{{question.name}}" id="radio{{question.name}}{{loop.index}}"{% endif%}>
                        <label class="custom-control-label" {% if question.parameters['multiple'] == True%}for="checkbox{{question.name}}{{loop.index}}"{%else%}for="radio{{question.name}}{{loop.index}}"{%endif%}>{{choice}}</label>
                    </div>
                    {% endfor %}
                </div>
            </div>
        </fieldset>
    </div>
</div>